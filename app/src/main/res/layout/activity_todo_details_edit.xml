<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.test.cameron.todolist.TodoDetailsEdit">

<!-- Login progress -->
<ProgressBar
    android:id="@+id/edit_todo_progess"
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:visibility="gone"
    android:layout_centerInParent="true" />

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/edit_todo_form">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_details_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edit_details_description"
        android:layout_below="@+id/edit_details_title"
        android:layout_alignEnd="@+id/edit_details_title"
        android:layout_marginTop="20dp"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_details_id"
        android:visibility="gone" />

    <Button
        style="?android:textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ADD TODO"
        android:id="@+id/add_todo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0099CC"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/edit_todo_buttons"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button
            android:id="@+id/edit_todo_button"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_edit_todo"
            android:background="#ff40d2e5"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/delete_todo_button"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_delete"
            android:layout_marginTop="10dp"
            android:background="#0099CC"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>



</RelativeLayout>

